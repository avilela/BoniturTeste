<h2>Entrar</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :cnpj, label: 'CNPJ', required: false, autofocus: true %>
    <%= f.input :password, label: 'Senha', required: false %>
    <%= f.input :remember_me, label: "Lembra-se de mim", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar", :class=>'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
