<!DOCTYPE html>
<html>
  <head>
    <title>BoniturTeste</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="https://d159gdcp8gotlc.cloudfront.net/assets/logobeta1.png" class="img-menu-principal-logo" alt="Bonitour">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>

        <% if company_signed_in? %>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <%= link_to('Sair', destroy_company_session_path, method: :delete,  :class => "btn btn-danger") %>        
            </div>
        <% end %>         
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
